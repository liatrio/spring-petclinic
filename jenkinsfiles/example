#!/bin/env groovy

def sleeplength = 0

pipeline {
    agent none

    environment {
        IMAGE = "liatrio/petclinic-tomcat"
    }

    stages {
        stage('Build') {
            agent any
            steps {
                sh 'mvn clean install'
            }
        }

        stage('Static Analysis') {
            agent any
            steps {
                script {
                    sh "sleep ${sleeplength}"
                }
            }
        }

        stage('Package') {
            agent any
            steps {
                script {
                    if ( env.BRANCH_NAME == 'master' ) {
                        pom = readMavenPom file: 'pom.xml'
                        TAG = pom.version
                    } else {
                        TAG = env.BRANCH_NAME
                    }
                    sh "docker build -t ${env.IMAGE}:${TAG} ."
                }
            }
        }

        stage('Deploy Local') {
            agent any
            steps {
                sh 'docker rm -f petclinic-tomcat-temp || true'
                sh "docker run -d -p 9966:8080 --name petclinic-tomcat-temp ${env.IMAGE}:${TAG}"
            }
        }

        stage('Smoke Test Local') {
            agent any
            steps {
                //sample dummy step
                sh "sleep ${sleeplength}"
            }
        }

        stage('Remove Local Container') {
            agent any
            steps {
                script {
                    if (env.BRANCH_NAME == 'master') {
                        sh 'docker rm -f petclinic-tomcat-temp || true'
                    } else {
                        echo 'Container available for testing!'
                    }
                }
            }
        }

        stage('Push to Registry') {
            agent any
            steps {
                //sample dummy step
                sh "sleep ${sleeplength}"
            }
        }

        stage('Scan Container') {
            agent any
            steps {
                //sample dummy step
                sh "sleep ${sleeplength}"
            }
        }

        stage('Deploy to QA') {
            agent any
            steps {
                //sample dummy step
                sh "sleep ${sleeplength}"
            }
        }

        stage('Smoke Test QA') {
            agent any
            steps {
                //sample dummy step
                sh "sleep ${sleeplength}"
            }
        }

        stage('Run Test Suite') {
            agent any
            steps {
                //sample dummy step
                sh "sleep ${sleeplength}"
            }
        }

        stage('Deploy to Prod') {
            agent any
            steps {
                //sample dummy step
                sh "sleep ${sleeplength}"
            }
        }

        stage('Smoke Test Prod') {
            agent any
            steps {
                //sample dummy step
                sh "sleep ${sleeplength}"
            }
        }
    }
}
